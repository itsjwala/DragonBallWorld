${fmd_domain_name} {
    
    route /api/* {
        uri strip_prefix /api
        redir https://api.${fmd_domain_name}{uri}
    }

    {{ range service "fmd-wordpress" }}
    reverse_proxy {{ .Address }}:{{ .Port }}
    {{ end }}
    tls {
       dns cloudflare "${cloudflare_api_token}" 
    }
}

www.${fmd_domain_name} {
    tls {
       dns cloudflare "${cloudflare_api_token}" 
    }
    redir https://${fmd_domain_name}{uri} permanent
}

api.${fmd_domain_name} {
    tls {
       dns cloudflare "${cloudflare_api_token}" 
    }
    {{ range service "fmd-nodeapp" }}
    reverse_proxy {{ .Address }}:{{ .Port }}
    {{ end }}
}

:8080 {
    respond /health-check 200
}
